/*----------------------------------------------------------------------------------------------------------------------
	 Java 7 ile birlikte sabit içerisinde alttire karakteri kullanılabilmektedir
---------------------------------------------------------------------------------------------------------------------*/
package csd;

class App {
	public static void main(String [] args) 
	{		
		int a = 0x1F_C0;
		
		System.out.printf("a=%d%n", a);
		System.out.printf("a=0x%X%n", a);
	}
}

