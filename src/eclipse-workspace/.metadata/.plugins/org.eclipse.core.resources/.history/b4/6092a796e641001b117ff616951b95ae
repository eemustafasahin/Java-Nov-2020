package csd;

class App {
	public static void main(String [] args) 
	{	
		int a = 0b10101111; //Since Java 7
		
		System.out.printf("a=%d%n", a);
		System.out.printf("a=%X%n", a);
		System.out.printf("a=%o%n", a);
	}
}

